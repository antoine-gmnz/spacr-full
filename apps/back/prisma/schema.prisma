generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Rover {
    id              Int      @id @default(autoincrement())
    name            String   @db.VarChar(255)
    landing_date    DateTime
    launch_date     DateTime
    status          String   @db.VarChar(255)
    max_sol         Int
    max_date        DateTime
    images          RoverImage[]
}

model ESASpaceTelescopeImage {
    id              Int       @id @default(autoincrement())
    img_src         String    
    esa_id          String    @unique
    img_full_size   String    
    title           String    
    credits         String    
    constellation   String    @db.VarChar(255)
    fov             String    @db.VarChar(255)
    release_date    String    @db.VarChar(255)
    type            String    @db.VarChar(255)
}

model RoverImage {
    id              Int      @id @default(autoincrement())
    sol             Int
    camera          String   @db.VarChar(255)
    img_src         String   @unique
    roverId         Int      
    Rover           Rover    @relation(fields: [roverId], references: [id])
    title           String   @db.VarChar(255)
    credits         String   @db.VarChar(255)
}